# Fastfile for MyFit iOS App
# Docs: https://docs.fastlane.tools

default_platform(:ios)

# Build Flutter IPA
def flutter_build(args = "")
  sh("flutter build ipa #{args}")
end

platform :ios do
  # API Key configuration
  before_all do
    app_store_connect_api_key(
      key_id: "T64HTCDT7X",
      issuer_id: "69a6de78-3c62-47e3-e053-5b8c7c11a4d1",
      key_filepath: "./fastlane/AuthKey.p8",
      in_house: false
    )
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Increment build number
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "Runner.xcodeproj"
    )

    # Build Flutter IPA with production environment
    Dir.chdir("../..") do
      flutter_build("--release --dart-define=ENV=prod --export-options-plist=ios/ExportOptions.plist")
    end

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "../build/ios/ipa/My Fit.ipa",
      skip_waiting_for_build_processing: true
    )

    puts "Successfully uploaded to TestFlight!"
  end

  desc "Quick upload - just build and upload"
  lane :upload do
    # Build Flutter IPA with production environment
    Dir.chdir("../..") do
      flutter_build("--release --dart-define=ENV=prod")
    end

    # Upload to TestFlight
    pilot(
      ipa: "../build/ios/ipa/My Fit.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Upload only - skip build"
  lane :upload_only do
    # Upload to TestFlight (IPA must already be built)
    pilot(
      ipa: "../build/ios/ipa/My Fit.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Upload to TestFlight and distribute to external testers"
  lane :testflight_external do |options|
    group = options[:group] || "My Testers"

    # Upload to TestFlight and distribute to external group
    upload_to_testflight(
      ipa: "../build/ios/ipa/My Fit.ipa",
      skip_waiting_for_build_processing: false,
      distribute_external: true,
      groups: [group],
      changelog: options[:changelog] || "Bug fixes and improvements"
    )

    puts "Successfully uploaded and distributed to #{group}!"
  end

  desc "Increment version and upload"
  lane :release do |options|
    version = options[:version] || "1.0.0"

    # Read current build number and increment
    pubspec = File.read("../../pubspec.yaml")
    current_build = pubspec.match(/version:\s*[\d.]+\+(\d+)/)[1].to_i
    new_build = current_build + 1

    # Update pubspec.yaml
    new_pubspec = pubspec.gsub(/version:\s*([\d.]+)\+\d+/, "version: #{version}+#{new_build}")
    File.write("../../pubspec.yaml", new_pubspec)
    puts "Updated version to #{version}+#{new_build}"

    # Build and upload
    upload
  end
end
