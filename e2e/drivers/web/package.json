{
  "name": "myfit-e2e-web",
  "version": "1.0.0",
  "description": "E2E tests for MyFit Flutter Web app using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:ci": "playwright test --reporter=html,list",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:cotraining": "playwright test cotraining",
    "test:feedback": "playwright test feedback-loop",
    "test:auth": "playwright test auth-onboarding",
    "report": "playwright show-report",
    "install:browsers": "playwright install chromium --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
